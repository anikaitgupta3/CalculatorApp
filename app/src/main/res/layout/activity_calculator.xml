<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".CalculatorActivity">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TableRow>
            <TextView
                android:id="@+id/allclear"
                android:layout_height="72dp"
                android:layout_width="wrap_content"
                style="@style/Number"
                android:text="AC"
                />
            <!--<TextView
                android:id="@+id/back"
                android:layout_height="72dp"
                android:layout_width="wrap_content"
                style="@style/Number"
                android:text="B"
                />-->
            <ImageView
                android:id="@+id/back"
                android:layout_height="72dp"
                android:layout_width="wrap_content"
                android:src="@drawable/back_button"
                android:scaleType="center"
                style="@style/Number"/> <!-- take from theme number-->
            <TextView
                android:id="@+id/modulo"
                android:layout_height="72dp"
                android:layout_width="wrap_content"
                style="@style/Number"
                android:text="%"
                />
            <TextView
                android:id="@+id/add"
                android:layout_height="72dp"
                android:layout_width="wrap_content"
                android:background="@color/teal_700"
                style="@style/Number"
                android:text="+"
                ><!--here we overeide background can write it below style also order does not matter-->

            </TextView>
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/seven"
                android:layout_height="72dp"
                android:layout_width="wrap_content"
                style="@style/Number"
                android:text="7"
                />
            <TextView
                android:id="@+id/eight"
                android:layout_height="72dp"
                android:layout_width="wrap_content"
                style="@style/Number"
                android:text="8"
                />
            <TextView
                android:id="@+id/nine"
                android:layout_height="72dp"
                android:layout_width="wrap_content"
                style="@style/Number"
                android:text="9"
                />
            <TextView
                android:id="@+id/subtract"
                android:layout_height="72dp"
                android:layout_width="wrap_content"
                android:background="@color/teal_700"
                style="@style/Number"
                android:text="-"
                >

            </TextView>
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/four"
                android:layout_height="72dp"
                android:layout_width="wrap_content"
                style="@style/Number"
                android:text="4"
                />
            <TextView
                android:id="@+id/five"
                android:layout_height="72dp"
                android:layout_width="wrap_content"
                style="@style/Number"
                android:text="5"
                />
            <TextView
                android:id="@+id/six"
                android:layout_height="72dp"
                android:layout_width="wrap_content"
                style="@style/Number"
                android:text="6"
                />
            <TextView
                android:id="@+id/multiply"
                android:layout_height="72dp"
                android:layout_width="wrap_content"
                android:background="@color/teal_700"
                style="@style/Number"
                android:text="*"
                >

            </TextView>
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/one"
                android:layout_height="72dp"
                android:layout_width="wrap_content"
                style="@style/Number"
                android:text="1"
                />
            <TextView
                android:id="@+id/two"
                android:layout_height="72dp"
                android:layout_width="wrap_content"
                style="@style/Number"
                android:text="2"
                />
            <TextView
                android:id="@+id/three"
                android:layout_height="72dp"
                android:layout_width="wrap_content"
                style="@style/Number"
                android:text="3"
                />
            <TextView
                android:id="@+id/divide"
                android:layout_height="72dp"
                android:layout_width="wrap_content"
                android:background="@color/teal_700"
                style="@style/Number"
                android:text="/"
                >

            </TextView>
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/changesign"
                android:layout_height="72dp"
                android:layout_width="wrap_content"
                style="@style/Number"
                android:text="+/-"
                />
            <TextView
                android:id="@+id/zero"
                android:layout_height="72dp"
                android:layout_width="wrap_content"
                style="@style/Number"
                android:text="0"
                />
            <TextView
                android:id="@+id/decimal"
                android:layout_height="72dp"
                android:layout_width="wrap_content"
                style="@style/Number"
                android:text="."
                />
            <TextView
                android:id="@+id/equals"
                android:layout_height="72dp"
                android:layout_width="wrap_content"
                android:background="@color/teal_700"
                style="@style/Number"
                android:text="="
                >

            </TextView>
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/expression"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/result"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/white"
        app:layout_constraintVertical_bias="0"
        android:textSize="24sp"
        android:padding="12dp"
        tools:text="12345+78"/> <!--tools:text wont be seen in final-->
    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:textColorHint="@color/purple_200"
        android:layout_marginTop="80dp"
        android:padding="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        tools:text="1234"/>


</androidx.constraintlayout.widget.ConstraintLayout>